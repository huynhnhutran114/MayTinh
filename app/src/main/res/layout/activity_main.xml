<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"



    >


    <TextView

        android:text=""
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/txtmaytinh"

        />
    <TableLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"

        >
        <TableRow>
            <Button


                android:background="@drawable/so1"
                android:text="CE"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btnce"


                />
            <Button
                android:background="@drawable/so1"

                android:text="C"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btnc"


                />
            <Button
                android:background="@drawable/so1"

                android:text="%"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btnphantram"


                />
            <Button
                android:background="@drawable/so1"

                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btnchia"


                />
        </TableRow>

        <TableRow>
            <Button

                android:background="@drawable/so"
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btn7"


                />
            <Button
                android:background="@drawable/so"
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btn8"


                />
            <Button
                android:background="@drawable/so"
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btn9"


                />
            <Button

                android:background="@drawable/so1"
                android:text="X"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btnnhan"


                />
        </TableRow>
        <TableRow>
            <Button

                android:background="@drawable/so"
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btn4"


                />
            <Button
                android:background="@drawable/so"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btn5"


                />
            <Button
                android:background="@drawable/so"
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btn6"


                />
            <Button

                android:background="@drawable/so1"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btntru"


                />
        </TableRow>
        <TableRow>
            <Button

                android:background="@drawable/so"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btn1"


                />
            <Button
                android:background="@drawable/so"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btn2"


                />
            <Button
                android:background="@drawable/so"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btn3"


                />
            <Button
                android:background="@drawable/so1"
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btncong"


                />
        </TableRow>
        <TableLayout>
            <TableRow>
                <Button
                    android:background="@drawable/so"
                    android:text="0"
                    android:layout_width="178dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn0"


                    />
                <Button
                    android:background="@drawable/so"
                    android:text=","
                    android:layout_width="wrap_content"
                    android:layout_height="61dp"
                    android:id="@+id/btnphay"


                    />
                <Button
                    android:background="@drawable/so1"

                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/btnbang"


                    />

            </TableRow>
        </TableLayout>

    </TableLayout>


</LinearLayout>